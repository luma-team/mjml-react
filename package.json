{
  "name": "@luma-team/mjml-react",
  "version": "0.2.1",
  "license": "MIT",
  "homepage": "https://github.com/luma-team/mjml-react",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "versionBumpStrategy": "patch"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "scripts": {
    "build": "pnpm tsup",
    "dev": "pnpm tsup --watch",
    "tsc": "tsc --noEmit",
    "pub": "npm run build && npm version patch && npm publish"
  },
  "devDependencies": {
    "@types/color": "^3.0.2",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.2",
    "esbuild": "^0.12.15",
    "prettier": "^2.3.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^7.2.0",
    "typescript": "^4.6.3",
    "color": "^3.1.3"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  }
}
